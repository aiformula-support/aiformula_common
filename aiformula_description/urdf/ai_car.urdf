      </geometry>
     </visual>
     <collision>
      <!-- <origin xyz="0 0.3 0.0" rpy="0 0 0"/> -->
      <geometry>
        <!-- <mesh filename="package://ai_fomula/robot_description/meshes/AIF_tire.dae"/> -->
        <mesh filename="package://aiformula_description/meshes/tire_v1.dae" scale="0.05 0.12 0.12"/>
